<ul class="comments-index">
  <% comments.each do |comment| %>
    <div class="comments-index_item">
      <% if comment.id.present? %>
        <div class="comment-content" id ="this_comment_<%= comment.id %>">
        <p class="text-break"><%= comment.content %></p>
        <div class="app-score_readonly" data-score=<%= "#{comment.score}" %>></div>
        <div class="comment_edit_btn">
          <% if current_user.id == comment.user.id %>
            <%= link_to "編集", edit_post_comment_path(@post, comment),remote: true %>
            <%= link_to "削除", post_comment_path(comment.post_id, comment.id), method: :delete, remote:true  %>
          <% end %>
          <p class="hr"></p>
        </div>
        </div>
      <% end %>
    </div>
  <% end %>
</ul>